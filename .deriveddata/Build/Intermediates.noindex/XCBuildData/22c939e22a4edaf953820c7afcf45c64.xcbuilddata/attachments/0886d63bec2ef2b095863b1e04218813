#!/bin/sh
# Type a script or drag a script file from your workspace to insert its path.
INFO_PLIST="${TARGET_BUILD_DIR}"/"${INFOPLIST_PATH}"

# Get current Git branch and commit hash
CONFIG_BRANCH=$(git rev-parse --abbrev-ref HEAD)
CONFIG_COMMIT=$(git log -1 --format=%h)

# Combine values into a version info string
LCVersionInfo="$CONFIGURATION ($CONFIG_BRANCH/$CONFIG_COMMIT)"

/usr/libexec/PlistBuddy -c "Add :LCVersionInfo string $LCVersionInfo" "${INFO_PLIST}"
cp -n -r "$SRCROOT"/Resources/*.lproj "$TARGET_BUILD_DIR/$CONTENTS_FOLDER_PATH"
echo 1

